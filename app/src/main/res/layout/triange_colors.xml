<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/colorsbackground">

    <Button
        android:id="@+id/t1g5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/greenlocked"
        app:layout_constraintStart_toEndOf="@+id/t1y2"
        app:layout_constraintTop_toBottomOf="@+id/t1g" />

    <Button
        android:id="@+id/t1o3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/orangelocked"
        app:layout_constraintStart_toEndOf="@+id/t1r9"
        app:layout_constraintTop_toBottomOf="@+id/t1o2" />

    <ImageView
        android:id="@+id/triangeThree"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triangeTwo"
        app:srcCompat="@drawable/trianglethree" />

    <Button
        android:id="@+id/t1r9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/redlocked"
        app:layout_constraintStart_toEndOf="@+id/triangeThree"
        app:layout_constraintTop_toBottomOf="@+id/t1r8" />

    <Button
        android:id="@+id/t1b3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bluelocked"
        app:layout_constraintStart_toEndOf="@+id/t1g2"
        app:layout_constraintTop_toBottomOf="@+id/t1b2" />

    <Button
        android:id="@+id/t1p3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/purplelocked"
        app:layout_constraintStart_toEndOf="@+id/t1b3"
        app:layout_constraintTop_toBottomOf="@+id/t1p2" />

    <Button
        android:id="@+id/t1rain3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rainbowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1p3"
        app:layout_constraintTop_toBottomOf="@+id/t1rain2" />

    <Button
        android:id="@+id/t1y3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/yellowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1o3"
        app:layout_constraintTop_toBottomOf="@+id/t1y2" />

    <Button
        android:id="@+id/t1b2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bluelocked"
        app:layout_constraintStart_toEndOf="@+id/t1g5"
        app:layout_constraintTop_toBottomOf="@+id/t1b" />

    <ImageView
        android:id="@+id/triangeTwo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triangleOne"
        app:srcCompat="@drawable/triangletwo" />

    <Button
        android:id="@+id/t1r8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/redlocked"
        app:layout_constraintStart_toEndOf="@+id/triangeTwo"
        app:layout_constraintTop_toBottomOf="@+id/t1r" />

    <Button
        android:id="@+id/t1o2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/orangelocked"
        app:layout_constraintStart_toEndOf="@+id/t1r8"
        app:layout_constraintTop_toBottomOf="@+id/t1o" />

    <Button
        android:id="@+id/t1y2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/yellowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1o2"
        app:layout_constraintTop_toBottomOf="@+id/t1y" />

    <Button
        android:id="@+id/t1g2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/greenlocked"
        app:layout_constraintStart_toEndOf="@+id/t1y3"
        app:layout_constraintTop_toBottomOf="@+id/t1g5" />

    <Button
        android:id="@+id/t1rain2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rainbowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1p2"
        app:layout_constraintTop_toBottomOf="@+id/t1rain" />

    <Button
        android:id="@+id/t1p2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/purplelocked"
        app:layout_constraintStart_toEndOf="@+id/t1b2"
        app:layout_constraintTop_toBottomOf="@+id/t1p" />

    <Button
        android:id="@+id/t1p"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/purplelocked"
        app:layout_constraintStart_toEndOf="@+id/t1b"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/t1y"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/yellowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1o"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/t1g"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/greenlocked"
        app:layout_constraintStart_toEndOf="@+id/t1y"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/t1b"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/bluelocked"
        app:layout_constraintStart_toEndOf="@+id/t1g"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/triangleExit"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/roundedbutton"
        android:includeFontPadding="false"
        android:text="x"
        android:textColor="#222222"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="@+id/t1rain2"
        app:layout_constraintStart_toStartOf="@+id/triangeTwo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maintriangle" />

    <Button
        android:id="@+id/t1r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/redlocked"
        app:layout_constraintStart_toEndOf="@+id/triangleOne"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/t1o"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/orangelocked"
        app:layout_constraintStart_toEndOf="@+id/t1r"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/t1rain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/rainbowlocked"
        app:layout_constraintStart_toEndOf="@+id/t1p"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <ImageView
        android:id="@+id/triangleOne"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/triangleone" />


</androidx.constraintlayout.widget.ConstraintLayout>

